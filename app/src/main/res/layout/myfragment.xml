<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/btn_informatoin"
        android:background="@color/colorblue"
        android:layout_width="match_parent"
        android:layout_height="70dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_userhead"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:src="@drawable/myfragment_head"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_weight="8"
                android:id="@+id/tv_username"
                android:layout_width="400dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textColor="@color/colorwhite"
                android:textSize="25sp"/>

        <ImageView
            android:src="@drawable/back_right_white"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="30dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb_order">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btn_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp"
                android:background="@drawable/myfragment_border">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/myfragment_user_order" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:text="预约管理"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/back_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_need"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:background="@drawable/myfragment_border">

                <ImageView
                    android:layout_marginLeft="3dp"
                    android:layout_width="28dp"
                    android:layout_height="34dp"
                    android:src="@drawable/myfragment_user_need" />
                <TextView
                    android:layout_marginLeft="33dp"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="发布需求" />
                <ImageView
                    android:src="@drawable/back_right"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_joinedneed"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:background="@drawable/myfragment_border">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="35dp"
                    android:src="@drawable/myfragment_user_myneed" />
                <TextView
                    android:layout_marginLeft="30dp"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="加入需求" />
                <ImageView
                    android:src="@drawable/back_right"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_evaluate"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:background="@drawable/myfragment_border">
                <ImageView
                    android:src="@drawable/evaluate"
                    android:layout_width="32dp"
                    android:layout_height="30dp" />
                <TextView
                    android:layout_marginLeft="30dp"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="我的评价" />
                <ImageView
                    android:src="@drawable/back_right"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_collect"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:background="@drawable/myfragment_border">
                <ImageView
                    android:src="@drawable/myfragment_user_collection"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
                <TextView
                    android:layout_marginLeft="30dp"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="我的收藏" />
                <ImageView
                    android:src="@drawable/back_right"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/btn_setting"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:background="@drawable/myfragment_border">
                <ImageView
                    android:src="@drawable/myfragment_setting"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
                <TextView
                    android:layout_marginLeft="30dp"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="设置" />
                <ImageView
                    android:src="@drawable/back_right"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/btn_exit"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:background="@drawable/myfragment_border">
                <ImageView
                    android:src="@drawable/myfragment_user_exit"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
                <TextView
                    android:layout_marginLeft="30dp"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="退出登录" />
                <ImageView
                    android:src="@drawable/back_right"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
