<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/btn_informatoin"
        android:background="@color/colorblue"
        android:layout_width="match_parent"
        android:layout_height="80dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_userhead"
                android:layout_gravity="center"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:src="@drawable/myfragment_head"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_weight="8"
                android:id="@+id/tv_username"
                android:layout_width="400dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textColor="@color/colorwhite"
                android:textSize="25sp"/>

        <ImageView
            android:src="@drawable/back_right_white"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="30dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb_order">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/myfragmentlayout"
                android:id="@+id/btn_order">
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/myfragment_user_order" />
                <TextView
                    style="@style/myfragmenttext"
                    android:text="预约管理" />
                <ImageView
                    style="@style/myfragmentimage" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_need"
                style="@style/myfragmentlayout">
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/myfragment_user_need" />
                <TextView
                    style="@style/myfragmenttext"
                    android:text="发布需求" />
                <ImageView
                    style="@style/myfragmentimage" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_joinedneed"
                style="@style/myfragmentlayout">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/myfragment_user_myneed" />
                <TextView
                    style="@style/myfragmenttext"
                    android:text="加入需求" />
                <ImageView
                    style="@style/myfragmentimage" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_evaluate"
                style="@style/myfragmentlayout">
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/evaluate"
                    android:layout_width="35dp"
                    android:layout_height="30dp" />
                <TextView
                    style="@style/myfragmenttext"
                    android:text="我的评价" />
                <ImageView
                    style="@style/myfragmentimage" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_collect"
                style="@style/myfragmentlayout">
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/myfragment_user_collection"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
                <TextView
                    style="@style/myfragmenttext"
                    android:text="我的收藏" />
                <ImageView
                    style="@style/myfragmentimage"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/btn_setting"
                style="@style/myfragmentlayout">
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/myfragment_setting"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
                <TextView
                    style="@style/myfragmenttext"
                    android:text="设置" />
                <ImageView
                    style="@style/myfragmentimage" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/btn_exit"
                style="@style/myfragmentlayout">
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/myfragment_user_exit"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
                <TextView
                    style="@style/myfragmenttext"
                    android:text="退出登录" />
                <ImageView
                    style="@style/myfragmentimage" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
