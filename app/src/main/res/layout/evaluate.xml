<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@color/colorblue">

      <ImageView
          android:id="@+id/iv_back"
          android:layout_width="30dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_centerVertical="true"
          android:layout_alignParentLeft="true"
          android:src="@drawable/go_back_selected"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="60dp"
          android:layout_centerInParent="true"
          android:text="评价场馆"
          android:textSize="20sp"
          android:textColor="@color/colorwhite"/>
      <TextView
          android:id="@+id/tv_fabu"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:textSize="20sp"
          android:text="发布"
          android:layout_marginRight="10dp"
          android:textColor="@color/colorwhite"/>
  </RelativeLayout>


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="场馆名："
            android:textSize="18sp"
            android:textColor="@color/colorblack"/>
        <TextView
            android:id="@+id/tv_stadiumname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:textColor="@color/colorblack"/>
    </LinearLayout>

    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/iv_picture"
        android:layout_gravity="center_horizontal"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:padding="5dp"/>

    <View
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>


    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="评价星级:"
        android:textColor="@color/colorblack"/>
    <RatingBar
        android:layout_marginLeft="90dp"
        android:id="@+id/rb_ratbar"
        style="@style/bookingRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:numStars="5"
        android:layout_marginBottom="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:background="@drawable/border">

        <EditText
            android:layout_margin="10dp"
            android:id="@+id/et_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:maxLength="3"
            android:background="#fff"
            android:hint="     这次场馆体验满足你的期待吗？说说你的心得，分享给大家吧"/>
    </LinearLayout>

</LinearLayout>
